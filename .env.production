# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=SUBSTITUA_PELA_SUA_API_KEY_SENDGRID
# SMTP_FROM_EMAIL=sistema@unicaclub.com
# SMTP_FROM_NAME=Sistema de Eventos UnicaClub

# ========================================
# N8N INTEGRATION
# ========================================
# Configure se usar N8N para automações
N8N_WEBHOOK_URL=https://seu-n8n.com/webhook/eventos
N8N_API_KEY=SUBSTITUA_PELA_SUA_API_KEY_N8N

# ========================================
# API DE VALIDAÇÃO DE CPF
# ========================================
# ReceitaWS (gratuita com limitações)
CPF_API_URL=https://www.receitaws.com.br/v1/cnpj
# Serpro (paga, mais confiável)
# CPF_API_URL=https://gateway.apiserpro.serpro.gov.br/consulta-cpf/v1/cpf
# CPF_API_KEY=SUBSTITUA_PELA_SUA_API_KEY_SERPRO

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=INFO
SENTRY_DSN=SUBSTITUA_PELA_SUA_DSN_SENTRY_OPCIONAL

# ========================================
# CONFIGURAÇÕES DE UPLOAD
# ========================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_MINUTE=5
